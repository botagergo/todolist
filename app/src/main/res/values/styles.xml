<resources>

    <style name="PropertyTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ClickableCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/card_view_background</item>
        <item name="contentPadding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="ClickableEditText" parent="android:Widget.EditText">
        <item name="android:clickable">true</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:longClickable">false</item>
        <item name="android:autofillHints" />
    </style>

</resources>