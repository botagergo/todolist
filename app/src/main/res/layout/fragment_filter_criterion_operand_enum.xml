<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.FilterCriterionOperandBooleanFragment">

    <data>
        <import type="hu.botagergo.todolist.view_model.SimpleFilterCriterionViewModel"/>
        <variable
            name="viewModel"
            type="SimpleFilterCriterionViewModel" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/editText_value"
        style="@style/ClickableEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/operator"
        android:onClick="onOperatorClick" />

</LinearLayout>
</layout>